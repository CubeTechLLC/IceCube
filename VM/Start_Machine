CD=$(cd $(dirname "$0"); pwd)

vboxmanage registervm "$CD/Ice Cube.vbox"
virtualbox --startvm "Ice Cube"
vboxmanage unregistervm "$CD/Ice Cube.vbox"
vboxmanage closemedium floppy "$CD/IceCube.img"